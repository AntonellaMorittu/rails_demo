<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.content %>
</p>

<%= form_with model: Comment.new, url: article_comments_path(@article), local: true do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email, id: 'comment_email' %>
  <%= form.label :body, value: 'Comment'  %>
  <%= form.text_field :body, id: 'comment_body_comment' %>
  <%= form.submit %>
<% end %>

<% @article.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <small>Submitted by:
    <% if comment.email != ''%>
      <%= comment.email %>
    <% else %>
      "Anonymous"
    <% end %>
  </small>
<% end %>
